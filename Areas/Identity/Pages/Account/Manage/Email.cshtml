@page
@model EmailModel

@{
    // Set the page title and active navigation
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<link rel="stylesheet" href="~/css/Account.css?">

<div class="form-wrapper">
    <div class="row">
        <div class="col-md-6 custom-width">
            <!-- Form to update the user's email address -->
            <form id="account-form" method="post" asp-page-handler="UpdateEmail" class="text-center w-100">
                <h2>Change Email</h2>

                <!-- Validation summary for form errors -->
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                <!-- Display current email if confirmed -->
                @if (Model.IsEmailConfirmed)
                {
                    <div class="form-group mb-4 position-relative input-group">
                        <span class="icon position-absolute">
                            <!-- SVG icon for email -->
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
                                    fill="#888" />
                            </svg>
                        </span>
                        <!-- Current email (disabled if confirmed) -->
                        <input asp-for="Email" class="form-control pl-5" placeholder="Your current email" disabled />
                        <div class="input-group-append">
                            <!-- Visual confirmation checkmark -->
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <!-- Display current email without confirmation checkmark -->
                    <div class="form-group mb-4 position-relative">
                        <span class="icon position-absolute">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
                                    fill="#888" />
                            </svg>
                        </span>
                        <input asp-for="Email" class="form-control pl-5" placeholder="Your current email" disabled />
                    </div>
                }

                <!-- Input for new email -->
                <div class="form-group mb-4 position-relative">
                    <span class="icon position-absolute">
                        <!-- SVG icon for new email -->
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
                                fill="#888" />
                        </svg>
                    </span>
                    <input asp-for="Input.NewEmail" class="form-control pl-5" autocomplete="email" aria-required="true"
                        placeholder="Enter new email" />
                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                </div>

                <!-- Update email button -->
                <button id="update-email-button" type="submit" class="w-100 btn btn-lg btn-primary">Update
                    Email</button>

                <partial name="_StatusMessage" for="StatusMessage" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include client-side validation scripts -->
    <partial name="_ValidationScriptsPartial" />
}
