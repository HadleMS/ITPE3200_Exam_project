@model string

@if (!String.IsNullOrEmpty(Model)) // Check if the status message is not empty
{
    // Determine the alert style based on whether the message starts with "Error"
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    <div style="margin-top: 20px; border-radius: 50px; max-width: 320px"
    class="alert alert-@statusMessageClass alert-dismissible" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    @Model
</div>
}
