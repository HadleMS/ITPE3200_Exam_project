@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Custom styles for the home page */
    body {
        font-family: 'Open Sans', sans-serif; /* Clean and modern font */
        background-color: #f8f9fa;
        color: #343a40;
        margin: 0; /* Reset default margin */
        padding: 0; /* Reset default padding */
    }

    .container {
        max-width: 1200px; /* Limit width for larger screens */
        margin: 0 auto; /* Center the container */
        padding: 2rem;
    }

    .homepage-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 0; /* Adjust top and bottom padding */
    }

    .homepage-text {
        flex: 1;
        text-align: left;
        padding-right: 2rem; /* Space between text and carousel */
    }

    h1 {
        font-size: 3rem;
        font-weight: bold;
        color: #39a554;
        margin: 0; /* Remove default margin */
    }

    p {
        margin-bottom: 1rem;
        font-size: 1.1rem; /* Increase readability */
    }

    .button {
        padding: 1rem 2rem;
        background-color: #39a554;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none; /* Remove underline from anchor */
        transition: background-color 0.3s; /* Smooth transition */
    }

    .button:hover {
        background-color: #28a745;
    }

    .features-section {
        margin-top: 4rem;
        text-align: center; /* Center align section title */
    }

    .features-section h2 {
        font-size: 2.5rem;
        color: #39a554; /* Use main theme color */
        margin-bottom: 2rem; /* Spacing below title */
    }

    .features-card {
        background-color: #fff; /* Card background */
        padding: 2rem;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        transition: transform 0.2s; /* Smooth scale effect */
        margin-bottom: 2rem; /* Spacing between cards */
    }

    .features-card:hover {
        transform: translateY(-5px); /* Lift effect on hover */
    }

    .features-card h4 {
        font-size: 1.5rem; /* Slightly larger font */
        margin-bottom: 1rem;
    }

    .features-card p {
        margin-bottom: 0;
        font-size: 1rem; /* Increase readability */
    }

    /* Carousel Image Styles */
    .carousel-item {
        height: 300px; /* Fixed height for all carousel items */
        overflow: hidden; /* Hide overflow for images that don't fit */
    }

    .carousel-item img {
        width: 100%; /* Make image responsive */
        height: auto; /* Maintain aspect ratio */
        max-height: 100%; /* Limit height to the carousel item */
        object-fit: contain; /* Scale the image to maintain aspect ratio */
    }
</style>

<div class="container">
    <div class="homepage-container">
        <div class="homepage-text">
            <h1>Track, Add, and Discover: Your Nutrition Journey Starts Here!</h1>
            <p>Join us in making healthier choices by keeping track of your food intake and nutritional information.</p>
            <a href="/Food/Index" class="button">Get Started</a>
        </div>
        <!-- Carousel Section -->
        <div class="homepage-image" style="flex: 1;">
            <div id="carouselImages" class="carousel slide" data-bs-ride="true">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/salad.png" class="d-block w-100" alt="Salad">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/nøkkelhull.png" class="d-block w-100" alt="Nøkkelhull">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/family.jpg" class="d-block w-100" alt="Family">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="features-section">
        <h2>Features of Our Tool</h2>
        <div class="row" style="display: flex; justify-content: space-between;">
            <div class="col-md-4" style="flex: 1; margin-right: 10px;">
                <div class="features-card">
                    <h4>Add New Foods</h4>
                    <p>Quickly add your food items along with their nutritional values to keep track of what you're consuming.</p>
                </div>
            </div>
            <div class="col-md-4" style="flex: 1; margin-right: 10px;">
                <div class="features-card">
                    <h4>View Nutritional Information</h4>
                    <p>Access detailed nutritional information of your food items in a clear and easy-to-read format.</p>
                </div>
            </div>
            <div class="col-md-4" style="flex: 1;">
                <div class="features-card">
                    <h4>Track Your Progress</h4>
                    <p>Monitor your dietary habits and make informed decisions for a healthier lifestyle.</p>
                </div>
            </div>
        </div>
    </section>
</div>
