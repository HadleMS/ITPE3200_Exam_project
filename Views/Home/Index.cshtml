@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Shop</title>
    <link href="~/css/Index.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container">
    <div class="homepage-container">
        <div class="homepage-text">
            <h1>Your Nutrition Journey Starts Here!</h1>
            <p>Make healthier choices by keeping track of your food intake and nutritional information.</p>
        </div>
        <!-- Carousel Section -->
        <div class="homepage-image" style="flex: 1;">
            <div id="carouselImages" class="carousel slide" data-bs-ride="carousel" data-bs-interval="10000">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="1" aria-label="Slide 2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/salad.png" class="d-block w-100" alt="Salad">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/nøkkelhull.png" class="d-block w-100" alt="Nøkkelhull">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="features-section">
        <div class="features-card">
            <div class="feature-item">
                <div class="features-icon">
                    <i class="fas fa-apple-alt"></i>
                </div>
                <h4>Add New Foods</h4>
                <p>Add new food items to track their nutritional details and ensure they meet health standards.</p>
                <a asp-controller="Item" asp-action="Create" class="small-button">Get Started</a>
            </div>
            <div class="feature-item">
                <div class="features-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <h4>Nutritional Info</h4>
                <p>View comprehensive nutritional information to make informed food choices and maintain a balanced diet.</p>
                <a asp-controller="Item" asp-action="Table" class="small-button">Learn More</a>
            </div>
            <div class="feature-item">
                <div class="features-icon">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <h4>Eat Healthy</h4>
                <p>Discover healthy eating tips and maintain a balanced lifestyle with curated nutrition insights.</p>
                <a asp-controller="Customer" asp-action="Table" class="small-button">Find Out How</a>
            </div>
        </div>
    </section>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>