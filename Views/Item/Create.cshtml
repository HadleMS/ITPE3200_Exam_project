@model Item

<!-- Header for creating a new item -->
<h2>Create New Item</h2>

<!-- Form for creating a new item, using the "Create" action in the controller -->
<form asp-action="Create">
    <!-- Displays a summary of validation errors -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Input field for the Name property, with validation and error display -->
    <div class="form-group">
        <label asp-for="Name"></label><span class="text-danger">*</span>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Input field for the Food_Group property, with validation and error display -->
    <div class="form-group">
        <label asp-for="Food_Group"></label><span class="text-danger">*</span>
        <input asp-for="Food_Group" class="form-control" />
        <span asp-validation-for="Food_Group" class="text-danger"></span>
    </div>

    <!-- Input field for the Energi_Kcal property, with validation and error display -->
    <div class="form-group">
        <label asp-for="Energi_Kcal"></label><span class="text-danger">*</span>
        <input asp-for="Energi_Kcal" class="form-control" />
        <span asp-validation-for="Energi_Kcal" class="text-danger"></span>
    </div>

    <!-- Input field for the Fett property, with validation and error display -->
    <div class="form-group">
        <label asp-for="Fett"></label><span class="text-danger">*</span>
        <input asp-for="Fett" class="form-control" />
        <span asp-validation-for="Fett" class="text-danger"></span>
    </div>

    <!-- Input field for the Protein property, with validation and error display -->
    <div class="form-group">
        <label asp-for="Protein"></label><span class="text-danger">*</span>
        <input asp-for="Protein" class="form-control" />
        <span asp-validation-for="Protein" class="text-danger"></span>
    </div>

    <!-- Input field for the Karbohydrat property, with validation and error display -->
    <div class="form-group">
        <label asp-for="Karbohydrat"></label><span class="text-danger">*</span>
        <input asp-for="Karbohydrat" class="form-control" />
        <span asp-validation-for="Karbohydrat" class="text-danger"></span>
    </div>

    <!-- Input field for the Salt property, with validation and error display -->
    <div class="form-group">
        <label asp-for="Salt"></label><span class="text-danger">*</span>
        <input asp-for="Salt" class="form-control" />
        <span asp-validation-for="Salt" class="text-danger"></span>
    </div>
    
    <!-- Input field for the ImageUrl property, with validation and error display -->
    <div class="form-group">
        <label asp-for="ImageUrl"></label><span class="text-danger">*</span>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Submit button to create the item -->
    <button type="submit" class="btn btn-primary">Create</button>

    <!-- Button to navigate back to the Table view -->
    <a asp-action="Table" class="btn btn-secondary">Back to Table View</a>
</form>
