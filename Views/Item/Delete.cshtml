@model Item

<link href="~/css/Delete.css" rel="stylesheet" />

<!-- Form container for centering -->
<div class="form-container">
    <h2>Delete Item</h2>
    <hr />

    <!-- Definition list with horizontal layout -->
    <dl class="dl-horizontal row">
        <!-- Displaying the item's properties using the Model -->
        <dt class="col-sm-6">Name</dt>
        <dd class="col-sm-6">@Model.Name</dd>

        <dt class="col-sm-6">Food group</dt>
        <dd class="col-sm-6">@Model.Food_Group</dd>

        <dt class="col-sm-6">Energy per 100g</dt>
        <dd class="col-sm-6">@Model.Energi_Kj kj</dd>

        <dt class="col-sm-6">Fat per 100g</dt>
        <dd class="col-sm-6">@Model.Fett g</dd>

        <dt class="col-sm-6">Protein per 100g</dt>
        <dd class="col-sm-6">@Model.Protein g</dd>

        <dt class="col-sm-6">Carbohydrates per 100g</dt>
        <dd class="col-sm-6">@Model.Karbohydrat g</dd>

        <dt class="col-sm-6">Salt per 100g</dt>
        <dd class="col-sm-6">@Model.Salt g</dd>

        <dt class="col-sm-6">Image</dt>
        <dd class="col-sm-6"> <img src="@Model.ImageUrl" alt="Item image" class="small-image"/></dd>
    </dl>

    <!-- Form for confirming deletion, posts to the DeleteConfirmed action with the item ID -->
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ItemId" method="post">
        <!-- Delete button -->
        <button type="submit" class="btn btn-danger">Delete</button>
        <!-- Cancel button to go back to the Table view -->
        <a asp-action="Products" class="btn btn-secondary">Cancel</a>
    </form>
</div>
