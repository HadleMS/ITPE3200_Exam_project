@model Item

@{
    ViewData["Title"] = "Delete Item";
}

<link href="~/css/Delete.css" rel="stylesheet" />

<!-- Centralized form-container -->
<div class="form-container">
    <h2>Delete Item</h2>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ItemId" method="post" id="deleteForm">
        <!-- Hidden input for ItemId -->
        <input type="hidden" asp-for="ItemId" />

        <!-- Display validation summary -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Display item details -->
        <div class="form-group">
            <label>Name</label>
            <p class="form-control-plaintext">@Model.Name</p>
        </div>

        <div class="form-group">
            <label>Food Group</label>
            <p class="form-control-plaintext">@Model.Food_Group</p>
        </div>

        <div class="form-group">
            <label>Energy per 100g</label>
            <p class="form-control-plaintext">@Model.Energi_Kj kj</p>
        </div>

        <div class="form-group">
            <label>Fat per 100g</label>
            <p class="form-control-plaintext">@Model.Fett g</p>
        </div>

        <div class="form-group">
            <label>Protein per 100g</label>
            <p class="form-control-plaintext">@Model.Protein g</p>
        </div>

        <div class="form-group">
            <label>Carbohydrates per 100g</label>
            <p class="form-control-plaintext">@Model.Karbohydrat g</p>
        </div>

        <div class="form-group">
            <label>Salt per 100g</label>
            <p class="form-control-plaintext">@Model.Salt g</p>
        </div>

        <div class="form-group">
            <label>Image</label>
            <div>
                <img src="@Model.ImageUrl" alt="Item image" class="img-thumbnail" />
            </div>
        </div>

        <!-- Confirmation message -->
        <div class="alert alert-warning">
            Are you sure you want to delete this item? This action cannot be undone.
        </div>

        <!-- Action buttons -->
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Products" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
