@model Exam.Models.Item
<link rel="stylesheet" href="~/css/Details.css">
<div>
    <h3 class="my-5 d-flex align-items-center justify-content-between">
        @Model.Name
        @if (Model.HasGreenKeyhole)
        {
            <img src="~/images/green_keyhole.jpg" alt="Nøkkelhullsmerke" class="keyhole-icon" />
        }
    </h3>
    <div class="row gx-5">
        <!-- Image and Action Links Section -->
        <div class="col-md-5 position-relative">
            <img alt="@Model.Name" src="@Model.ImageUrl" class="product-image img-fluid" />

            <!-- Action links for authenticated users, moved under the image -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="modal-actions">
                    <a href="@Url.Action("Update", new { id = Model.ItemId })" class="update-link">Update</a>
                    <a href="@Url.Action("Delete", new { id = Model.ItemId })" class="delete-link">Delete</a>
                </div>
            }
        </div>

        <!-- Nutritional Information Section -->
        <div class="col-md-7">
            <!-- Nutritional Information in a dropdown that starts open -->
            <details class="nutrition-details" open>
                <summary class="summary-subtle">Næringsinnhold per 100 gram</summary>
                <div class="nutrition-table-container">
                    <table>
                        <tr><td>Type:</td><td>@Model.Food_Group</td></tr>
                        <tr><td>Energi:</td><td>@Model.Energi_Kj kj</td></tr>
                        <tr><td>Fett:</td><td>@Model.Fett g</td></tr>
                        <tr><td>Protein:</td><td>@Model.Protein g</td></tr>
                        <tr><td>Karbohydrat:</td><td>@Model.Karbohydrat g</td></tr>
                        <tr><td>Salt:</td><td>@Model.Salt g</td></tr>
                    </table>
                </div>
            </details>
        </div>
    </div>
</div>
