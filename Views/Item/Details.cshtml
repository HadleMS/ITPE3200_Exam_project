<link rel="stylesheet" href="~/css/Details.css">

<div>
    <div class="row gx-5">
        <!-- Image Section -->
        <div class="col-md-5 position-relative">
            <h3 class="item-header my-3">
                @Model.Name
                @if (Model.HasGreenKeyhole)
                {
                    <img src="~/images/green_keyhole.jpg" alt="NÃ¸kkelhullsmerke" class="keyhole-icon" />
                }
            </h3>
            <img alt="@Model.Name" src="@Model.ImageUrl" class="product-image img-fluid" />
        </div>

        <!-- Nutritional Information Section -->
        <div class="col-md-7">
            <!-- Nutritional Information in a dropdown that starts open -->
            <details class="nutrition-details" style="margin-top: 25px;" open>
                <summary class="summary-subtle">Nutritional content per 100 gram </summary>
                <div class="nutrition-table-container">
                    <table>
                        <tr>
                            <td>Type:</td>
                            <td>@Model.Food_Group</td>
                        </tr>
                        <tr>
                            <td>Energy:</td>
                            <td>@Model.Energi_Kj kj</td>
                        </tr>
                        <tr>
                            <td>Fat:</td>
                            <td>@Model.Fett g</td>
                        </tr>
                        <tr>
                            <td>Protein:</td>
                            <td>@Model.Protein g</td>
                        </tr>
                        <tr>
                            <td>Carbohydrates:</td>
                            <td>@Model.Karbohydrat g</td>
                        </tr>
                        <tr>
                            <td>Salt:</td>
                            <td>@Model.Salt g</td>
                        </tr>
                    </table>
                </div>
            </details>

            <!-- Action Links for Authenticated Users -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div style="text-align: right; margin-top: 20px" class="static-actions mb-3">
                    <a href="@Url.Action("Update", new { id = Model.ItemId })" class="update-link">Update</a>
                    <a href="@Url.Action("Delete", new { id = Model.ItemId })" class="delete-link">Delete</a>
                </div>
            }
        </div>
    </div>
</div>
