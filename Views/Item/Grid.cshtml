@model ItemsViewModel

<h1>A Visual Display of Nutritional Products (@Model.CurrentViewName View)</h1>
<a href="/Item/Table">Table View</a>

<style>
    .custom-image-size {
        width: 100%;  /* Make the image take the full width of the container */
        height: auto; /* Let the height be dynamic to maintain aspect ratio */
        object-fit: contain; /* Ensure the image fits within the container without being cropped */
        max-height: 200px; /* Set a max-height to keep a consistent grid */
    }
</style>


<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <div class="col">
            <div class="card">
                <!-- Using the custom class for image size -->
                <img src="@item.ImageUrl" class="img-fluid custom-image-size" alt="@item.Name" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Some nutritional information here</p>
                </div>
            </div>
        </div>
    }
</div>

