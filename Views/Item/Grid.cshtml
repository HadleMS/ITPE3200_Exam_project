@model ItemsViewModel

<h1 style="font-size: 2rem; font-weight: bold; text-align: center; margin-bottom: 0.5rem; color: #333;">
    A Visual Display of Nutritional Products
</h1>
<p style="text-align: center; font-size: 1rem; color: #666;">
    (@Model.CurrentViewName View)
</p>

<a href="/Item/Table" title="Table View">
    <img src="/images/table.png" alt="Table View" style="width: 30px; height: auto; vertical-align: middle;" />
</a>

<style>
    .custom-image-size {
        width: 100%;
        height: auto;
        object-fit: contain;
        max-height: 200px;
    }

    .card {
        border: none;
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        color: #666;
        font-size: 0.9rem;
        margin: 0.5rem 0;
    }

    .card a {
        text-decoration: none;
        color: inherit;
    }

    .card a:hover {
        color: #333;
    }

    /* Stil for nøkkelhullsmerke */
    .keyhole-icon {
        width: 30px;
        height: auto;
        position: absolute;
        bottom: 40px;
        right: 10px;
    }
</style>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <div class="col">
            <div class="card">
                <!-- Gjør bildet og tittelen klikkbare for å gå til detaljsiden -->
                <a href="@Url.Action("Details", "Item", new { Id = item.ItemId })">
                    <img src="@item.ImageUrl" class="img-fluid custom-image-size" alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                    </div>
                </a>
                <div class="card-body">
                    <p class="card-text">Some nutritional information here</p>
                </div>

                <!-- Vis nøkkelhullsmerket hvis HasGreenKeyhole er true -->
                @if (item.HasGreenKeyhole)
                {
                    <img src="~/images/green_keyhole.jpg" alt="Nøkkelhullsmerke" class="keyhole-icon" />
                }
            </div>
        </div>
    }
</div>


