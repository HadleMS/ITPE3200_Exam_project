@model ItemsViewModel

<h1 class="page-title">A Visual Display of Nutritional Products</h1>


<!-- Button to switch to Table View -->
<a href="/Item/Table" title="Table View" style="margin-bottom: 20px; display: inline-block;">
    <img src="/images/table.png" alt="Table View" style="width: 30px; height: auto; vertical-align: middle;" />
</a>

<style>
    
.page-title {
    font-size: 28px;
    color: #333; /* Mørk grå for et mer moderne utseende */
    text-align: center;
    margin-top: 20px;
    margin-bottom: 5px;
    font-weight: bold;
}
    .custom-image-size {
        width: 100%;
        height: auto;
        object-fit: contain;
        max-height: 200px;
    }

    .card {
        border: none;
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 1.5rem;
        text-align: center;
        position: relative;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        color: #666;
        font-size: 0.9rem;
        margin: 0.5rem 0;
    }

    .card a {
        text-decoration: none;
        color: inherit;
    }

    .card a:hover {
        color: #333;
    }

    .keyhole-icon {
        width: 30px;
        height: auto;
        position: absolute;
        bottom: 40px;
        right: 10px;
    }

    .create-button-container {
        text-align: left;
        margin-top: 20px;
        padding-left: 20px;
    }

    .create-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
    }

    .create-button:hover {
        background-color: #45a049;
    }

    html {
        overflow-y: scroll;
        scroll-behavior: smooth;
    }

    main {
        min-height: 100vh;
        padding-bottom: 2rem;
    }
</style>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <div class="col">
            <div class="card">
                <!-- Image and title link to the item's details page -->
                <a href="@Url.Action("Details", "Item", new { Id = item.ItemId })">
                    <img src="@item.ImageUrl" class="img-fluid custom-image-size" alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                    </div>
                </a>
                <div class="card-body">
                    <p class="card-text">Some nutritional information here</p>
                </div>

                <!-- Keyhole icon if HasGreenKeyhole is true -->
                @if (item.HasGreenKeyhole)
                {
                    <img src="~/images/green_keyhole.jpg" alt="Nøkkelhullsmerke" class="keyhole-icon" />
                }
            </div>
        </div>
    }
</div>

<!-- Create New Item Button, aligned to the bottom left -->
<div class="create-button-container">
    <a href="/Item/Create" class="create-button">Create New Item</a>
</div>
