@model ItemsViewModel

<h1 class="page-title">Nutritional Information of Grocery Items</h1>

<!-- Button Container for Table View -->
<div class="button-container">
    <a href="/Item/Grid" title="Grid View" class="view-switch-button">
        <img src="/images/grid-view.jpg" alt="Grid View" style="width: 30px; height: auto; vertical-align: middle;" />
    </a>
</div>

<style>
    /* Header styling */
    .page-title {
        font-size: 28px;
        color: #333; /* Dark gray for a modern look */
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
        font-weight: bold;
    }

    /* Button container styling */
    .button-container {
        display: flex;
        justify-content: flex-start; /* Align buttons to the left */
        margin-bottom: 20px;
    }

    /* Styling for View Switch Button */
    .view-switch-button {
        display: inline-block;
        background-color: white;
        padding: 10px;
        border-radius: 5px;
        margin-right: 10px; /* Space between buttons */
    }
       .view-switch-button:hover {
        background-color: whitesmoke;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }
    th.energy-column {
        min-width: 170px; 
    }
    th {
        background-color: #2f4f4f;
        color: white;
        padding: 12px;
        text-align: left;
        font-weight: bold;
    }
    td {
        border: 1px solid #ddd;
        padding: 12px;
        transition: background-color 0.3s;
    }
    tr:hover {
        background-color: #f1f1f1;
    }
    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    .action-links {
        display: flex;
        gap: 12px;
    }
    .action-links a {
        font-weight: bold;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 4px;
    }
    .update-link {
        color: #28a745;
        text-decoration: none;
        border: 1px solid #28a745;
        padding: 4px 8px;
        border-radius: 5px;
        display: inline-block;
    }
    .update-link:hover {
        color: white;
        background-color: #28a745;
    }
    .delete-link {
        color: #dc3545;
        text-decoration: none;
        border: 1px solid #dc3545;
        padding: 4px 8px;
        border-radius: 5px;
        display: inline-block;
    }
    .delete-link:hover {
        color: white;
        background-color: #dc3545;
    }
    .keyhole-icon {
        width: 30px;
        height: auto;
        vertical-align: middle;
    }
    .create-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 20px;
        font-weight: bold;
    }
    .create-button:hover {
        background-color: #45a049;
    }
    html {
        overflow-y: scroll;
        scroll-behavior: smooth;
    }
    main {
        min-height: 100vh;
        padding-bottom: 2rem;
    }
    
    /* Create New Item Button */
    .create-button-container {
        text-align: center;
        margin-top: 25px;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Food group</th>
            <th class="energy-column">Energy per 100g</th>
            <th>Fat per 100g</th>
            <th>Protein per 100g</th>
            <th>Carbohydrates per 100g</th>
            <th>Salt per 100g</th>
            <th>Image</th>
            <th>Keyhole</th>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ItemId</td>
                <td>@Html.ActionLink(item.Name, "Details", new { id = item.ItemId })</td>
                <td>@item.Food_Group</td>
                <td>@item.Energi_Kcal</td>
                <td>@item.Fett</td>
                <td>@item.Protein</td>
                <td>@item.Karbohydrat</td>
                <td>@item.Salt</td>
                <td>
                    <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 50px; max-height: 50px; display: block; margin: 0 auto;" />
                </td>
                <td>
                    @if (item.HasGreenKeyhole)
                    {
                        <img src="~/images/green_keyhole.jpg" alt="Keyhole" class="keyhole-icon" style="display: block; margin: 0 auto;" />
                    }
                </td>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <td class="action-links">
                        <a href="@Url.Action("Update", new { id = item.ItemId })" class="update-link">Update</a>
                        <a href="@Url.Action("Delete", new { id = item.ItemId })" class="delete-link">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<!-- Create New Item Button -->
<div class="create-button-container">
    <a href="/Item/Create" class="create-button">Create New Item</a>
</div>
