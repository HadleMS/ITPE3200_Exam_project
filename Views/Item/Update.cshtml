@model Item

<!-- Header for updating an item -->
<h2>Update Item</h2>

<!-- Form for updating an item -->
<form asp-action="Update">
    <input type="hidden" asp-for="ItemId" />

    <!-- Input field for the Name property with validation -->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Input field for the Food_Group property with validation -->
    <div class="form-group">
        <label asp-for="Food_Group"></label>
        <input asp-for="Food_Group" class="form-control" />
        <span asp-validation-for="Food_Group" class="text-danger"></span>
    </div>

    <!-- Input field for Energi_Kcal with validation -->
    <div class="form-group">
        <label asp-for="Energi_Kcal"></label>
        <input asp-for="Energi_Kcal" class="form-control" />
        <span asp-validation-for="Energi_Kcal" class="text-danger"></span>
    </div>

    <!-- Input field for Fett with validation -->
    <div class="form-group">
        <label asp-for="Fett"></label>
        <input asp-for="Fett" class="form-control" />
        <span asp-validation-for="Fett" class="text-danger"></span>
    </div>

    <!-- Input field for Protein with validation -->
    <div class="form-group">
        <label asp-for="Protein"></label>
        <input asp-for="Protein" class="form-control" />
        <span asp-validation-for="Protein" class="text-danger"></span>
    </div>

    <!-- Input field for Karbohydrat with validation -->
    <div class="form-group">
        <label asp-for="Karbohydrat"></label>
        <input asp-for="Karbohydrat" class="form-control" />
        <span asp-validation-for="Karbohydrat" class="text-danger"></span>
    </div>

    <!-- Input field for Salt with validation -->
    <div class="form-group">
        <label asp-for="Salt"></label>
        <input asp-for="Salt" class="form-control" />
        <span asp-validation-for="Salt" class="text-danger"></span>
    </div>

    <!-- Input field for ImageUrl with validation -->
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Button to submit the form and save changes -->
    <button type="submit" class="btn btn-primary">Save Changes</button>

    <!-- Button to cancel and return to the Table view -->
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>
</form>

