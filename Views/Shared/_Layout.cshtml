<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Nutrition Tracker</title>
    
    <!-- Custom Layout CSS and Bootstrap -->
    <link href="~/css/Layout.css" rel="stylesheet" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        /* Navbar custom styling */
        .navbar-custom {
            background-color: #356859; /* Tilpasset grønnfarge for navbar */
        }
        .navbar-custom .nav-link, .navbar-custom .navbar-brand {
            color: #ffffff; /* Hvit tekst for kontrast */
        }
        .navbar-custom .nav-link:hover, .navbar-custom .navbar-brand:hover {
            color: #c4edcc; /* Lysere grønnfarge for hover-effekt */
        }

        /* Bakgrunnsfarge for hele siden */
        body {
            background-color: #fbfdfb; /* Svært lys grønn bakgrunn */
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* Header styling */
        .about-header {
            text-align: center;
            margin-top: 7rem;
            margin-bottom: 2.5rem;
        }

        .about-subtitle {
            color: #39a554;
            font-size: 1.3rem;
            font-weight: 600;
            display: block;
            margin-bottom: 0.5rem;
            letter-spacing: 0.05rem;
            font-style: italic;
        }

        .about-main-title {
            background: linear-gradient(to right, #39a554, #66bb6a);
            -webkit-background-clip: text;
            color: #4f4f4f;
            font-size: 2.8rem;
            font-weight: 700;
            line-height: 1.3;
            margin-bottom: 2rem;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
            font-family: 'Georgia', serif;
        }

        /* Feature section styling */
        .features {
            display: flex;
            justify-content: space-around;
            text-align: center;
            gap: 3rem;
            margin-top: 8rem;
        }

        .feature-item {
            flex: 1;
            max-width: 320px;
            padding: 2rem 0;
        }

        .feature-logo {
            width: 64px;
            height: 64px;
            fill: var(--first-color);
            margin-bottom: var(--mb-2);
            transition: transform 0.3s ease;
        }

        .feature-logo:hover {
            transform: scale(1.1);
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(to right, #39a554, #66bb6a);
            -webkit-background-clip: text;
            color: transparent;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
            margin-top: 1rem;
            margin-bottom: 1rem;
        }

        .feature-description {
            font-size: 0.95rem;
            color: #666;
            font-style: italic;
            line-height: 1.7;
            font-weight: 300;
            padding: 0 1rem;
        }

        /* Divider */
        .divider {
            width: 100%;
            height: 1px;
            background-color: #ddd;
            margin: 3rem 0;
        }

        /* CTA button */
        .cta-button {
            display: inline-block;
            padding: 0.8rem 2.5rem;
            background-color: #39a554;
            color: white;
            font-size: 1rem;
            text-decoration: none;
            font-weight: bold;
            border-radius: 30px;
            transition: all 0.3s ease;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -75%;
            width: 50%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            transform: skewX(-25deg);
            transition: all 0.5s ease;
        }

        .cta-button:hover::before {
            left: 125%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="/images/logo.png" alt="My Nutrition Tracker Logo" />
                    My Nutrition Tracker
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Products", "Item")">Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Table", "Customer")">About</a>
                        </li>

                        <!-- Account Dropdown with _LoginPartial.cshtml -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                @await Html.PartialAsync("_LoginPartial")
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!-- Dynamic content for each page -->
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </main>
    </div>

    <!-- Required JavaScript for Bootstrap and FontAwesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>

